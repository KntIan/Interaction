
html,
body {
  height: 100%;
  margin: 0;
  overflow: hidden;
}
.login-container {
  height: 100vh;
  padding: 24px;
  color: white;
  display: flex;
  flex-direction: column;
  background: url("../../static/images/Mask group.png") no-repeat;
  background-size: cover;
}
.login-button {
  width: 100%;
  background: linear-gradient(90deg, #e4bde4 0%, #f384f4 100%);
  border-radius: 64px;
  margin-top: 128px;
  color: white;
  border: none;
  padding: 12px;
  font-size: 16px;
}
